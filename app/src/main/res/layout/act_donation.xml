<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DonationAct">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="Choose Donation"
            android:layout_weight="1"
            android:padding="20dp"
            android:onClick="ChooseDonation"
            android:id="@+id/btnSub"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rect6h"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:padding="20dp"
            android:onClick="oneTimeDonation"
            android:id="@+id/btn_OneTime"
            android:background="@drawable/rect6h"
            android:layout_weight="1"
            android:text="One time Donation"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView_donation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</androidx.appcompat.widget.LinearLayoutCompat>