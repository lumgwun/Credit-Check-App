<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rect_white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:scrollIndicators="left"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:padding="40dp"
                android:layout_marginTop="35dp"
                android:id="@+id/rLogo"
                android:background="@drawable/rect6h"
                android:src="@drawable/check" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Coming soon Apps Overviews, below"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_new"
                android:textSize="15sp"
                android:padding="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_white"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/switcher244"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center_horizontal"
                    android:text="Our Trading App for Traders and Trade Owners,with us,you take 60% of the profits, even as we trade for you."
                    android:background="@drawable/rect_white"
                    android:src="@drawable/rect6b" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="40dp"
                    android:layout_marginTop="35dp"
                    android:id="@+id/imageTrade"
                    android:background="@drawable/rect55"
                    android:src="@drawable/fx4" />


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:fontFamily="monospace"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rect_h"
                    android:foregroundGravity="center_horizontal"
                    android:text="Our Real Estate and Property App, with value financing,our Coop. Members would be able to access Loans to pay rent and for their property, after their first 3 months"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:padding="40dp"
                    android:layout_marginTop="35dp"
                    android:id="@+id/realE"
                    android:background="@drawable/rect66"
                    android:src="@drawable/estate1" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developed by Lumgwun Solutions Group."
                    android:gravity="bottom"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rect_h"
                    android:textColor="@android:color/white"
                    android:padding="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>