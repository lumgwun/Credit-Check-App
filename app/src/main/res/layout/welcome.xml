<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:scrollbarStyle="insideInset"
    android:background="@drawable/rect_h">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:padding="4dp"
        android:background="@drawable/rect6h"
        android:id="@+id/image3"
        android:src="@drawable/awajima" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More than 50 millions Nigerians are owing one money or another,from their BVN"
        android:textColor="@color/red_brown_dark"
        android:textSize="18sp"
        android:id="@+id/tv1"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/image3"
        android:marqueeRepeatLimit="marquee_forever"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/tv1"
        android:layout_marginTop="20dp"
        android:id="@+id/linear3"
        android:background="@drawable/rect55"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/tv2"
            android:padding="20dp"
            android:paddingRight="10dp"
            android:text="This App will help you to check your Credit worthiness and Loan status, with just your phone Number"
            android:textAlignment="center"
            android:textColor="@color/red_brown_dark"
            android:textSize="20sp" />

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/txt66"
        android:padding="20dp"
        android:onClick="goDonation"
        android:background="@drawable/rect6h"
        android:layout_below="@id/linear3"
        android:paddingRight="10dp"
        android:text="You can support us by donating an amount to support this free App."
        android:textAlignment="center"
        android:textColor="@color/red_brown_dark"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powered by Lumgwun Solutions Group"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/txt66"
        android:background="@drawable/rect66"
        android:textColor="@color/red_brown_dark"
        android:padding="20dp"
        android:textStyle="italic" />


</RelativeLayout>